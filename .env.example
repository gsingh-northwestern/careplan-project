# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=True

# Anthropic API Key (required for AI care plan generation)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# LLM Mode
# Set to False to use real Claude API, True to use mock responses
LLM_MOCK_MODE=True

# Database (optional - uses SQLite locally by default)
# Railway automatically sets DATABASE_URL when you add PostgreSQL
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Railway automatically provides these in production:
# RAILWAY_PUBLIC_DOMAIN=your-app.up.railway.app
# PORT=8000
